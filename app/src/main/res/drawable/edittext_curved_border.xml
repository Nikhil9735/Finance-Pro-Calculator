<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Light blue background -->
            <stroke android:width="2dp" android:color="#008877" /> <!-- Blue border -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke android:width="1dp" android:color="#999999" /> <!-- Grey border -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
