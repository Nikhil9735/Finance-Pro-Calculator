<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fixed Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:title="@string/app_name"
            app:titleTextColor="?attr/colorPrimaryFixed" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/notice_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_bg"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_margin="8dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŸ Welcome to Financial Calculator! ðŸŒŸ"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <!-- Message Content -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thank you for downloading our app! \n\nWe've started with essential financial calculations to help you with your daily needs. This is just the beginning!\n\nðŸ“¢ Important Notice:\nWe're actively working to add more features based on your needs and feedback.\n\nYour support means everything to us! Please bear with us as we continue to improve."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"/>

                    <!-- Contact Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Have suggestions? We'd love to hear from you!"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <Button
                            android:id="@+id/btn_contact_form"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="ðŸ“© Use Contact Form in Settings"
                            android:textSize="14sp"
                            style="@style/ButtonStyle3"
                            android:background="@drawable/curve_box"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Or email directly: nirvaysofttech@gmail.com"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:autoLink="email"
                            android:linksClickable="true"/>
                    </LinearLayout>

                    <!-- Premium Upgrade -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Love our app? Support us!"
                            android:textSize="14sp"
                            android:textColor="#2E7D32"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upgrade to Premium for an ad-free experience and exclusive features!"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/btn_premium"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:text="â­ Go Premium"
                            style="@style/ButtonStyle1"
                            android:background="@drawable/curve_box"
                            android:textSize="14sp"
                            android:backgroundTint="#F7F018AE"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>

                    <!-- Dismiss Button - Redesigned -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="@string/close"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/regular"
                        android:background="@drawable/bg_benefit_item"
                        android:onClick="onDismissClick"/>
                </LinearLayout>

                <!-- Container for dynamically added buttons -->
                <LinearLayout
                    android:id="@+id/buttonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="130dp"
                    android:fontFamily="@font/bold" />
            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/activity_ad_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@drawable/drawer_background"
        style="@style/bgScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:fitsSystemWindows="true"
            style="@style/bgScreen">

            <!-- User profile image -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="?attr/logoDrawable"
                android:background="@drawable/rounded_corners"
                android:clipToOutline="true"/>

            <!-- App name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/app_name"
                android:textColor="?attr/colorPrimary"
                android:textSize="22dp"
                android:layout_gravity="center" />

            <!-- Slogan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan_text"
                style="@style/textColor"
                android:textSize="17sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:background="@color/line_grey" />

            <!-- Navigation Items (Share, Rate, More Apps) -->
            <LinearLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect">

                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_share"
                    style="@style/icColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3.5dp"
                    android:text="@string/share"
                    style="@style/textColor"
                    android:fontFamily="@font/regular"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect">

                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_rate"
                    style="@style/icColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3.5dp"
                    android:text="@string/rate"
                    style="@style/textColor"
                    android:fontFamily="@font/regular"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/More"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect">

                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_more_apps"
                    style="@style/icColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3.5dp"
                    android:text="@string/more"
                    style="@style/textColor"
                    android:fontFamily="@font/regular"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upgradeToPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:layout_below="@id/More">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginStart="15dp"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_primium"
                        android:contentDescription="@string/premium_title"
                        style="@style/icColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="@string/premium_title"
                            style="@style/textColor"
                            android:fontFamily="@font/regular"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/selected_language_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14.5sp"
                            style="@style/selectedTextColor"
                            android:text="@string/premium_price"
                            android:fontFamily="@font/regular" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/line_grey">
            </View>

            <!-- Footer Layout for Settings -->
            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_effect"
                android:layout_gravity="bottom">

                <ImageView
                    android:layout_marginStart="20dp"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_settings"
                    style="@style/icColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3.5dp"
                    android:text="@string/settings"
                    style="@style/textColor"
                    android:fontFamily="@font/regular"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
